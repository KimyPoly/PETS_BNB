<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 405px;">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="mb-3">
          <%= f.error_notification %>
        </div>

        <div class="mb-3">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: 'form-control', autocomplete: 'email' } %>
        </div>

        <div class="d-grid">
          <%= f.button :submit, "Send me instructions", class: 'btn btn-flat' %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
