  <div class="container mt-5">
    <div class="card mx-auto" style="max-width: 400px;">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { class: 'form-control', autocomplete: 'email' } %>
          </div>

          <div class="mb-3">
            <%= f.input :password,
                        required: false,
                        input_html: { class: 'form-control', autocomplete: 'current-password' } %>
          </div>

          <div class="mb-3 form-check d-flex">
            <%= f.input :remember_me, as: :boolean, label: false, input_html: { class: 'form-check-input' } %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>

          <div class="d-grid">
            <%= f.button :submit, "Log in", class: 'btn btn-flat'%>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>  
