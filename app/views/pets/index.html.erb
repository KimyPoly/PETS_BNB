<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="mb-5">Pets</h1>
    </div>
    <% @pets.each do |pet| %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-12">
        <div class="card" style="width: 18rem;">
          <img src="<%=pet.photo_url%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <p class="card-text"><%= pet.description %></p>
            <button class="btn btn-primary"><%= link_to pet.race, pet_path(pet), id: "color"%></button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
