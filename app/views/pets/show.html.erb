<h1><%=@pet.name%></h1>
<h2><%=@pet.race%></h2>
<h2><%=@pet.species%></h2>
<h3><%=@pet.habitat%></h3>
<h4><%=@pet.age%></h4>
<p><%=@pet.description%></p>

  <%@pet.bookings.each do|booking| %>
    <%= simple_form_for [booking, @review] do |f| %>
      <%= f.input :description, placeholder: 'Commentaire' %>
      <%= f.submit class: 'btn btn-flat' %>
    <% end %>
  <% end %>

<%= button_to 'Back to the List', pets_path, method: 'get' %>
<%= link_to "New booking", new_pet_booking_path(@pet), class: "btn btn-primary", id: "c" %>
<%= link_to 'Remove', pet_path(@pet), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } %>
