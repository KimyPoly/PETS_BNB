<div class="container">
  <div class="d-flex border border-2 mt-3 mb-5">
  <img src="<%=@pet.photo_url%>" alt="">
  <div class=" align-item-center m-3">
    <h1><%=@pet.name%></h1>
    <h2><%=@pet.race%></h2>
    <h2><%=@pet.species%></h2>
    <h3><%=@pet.habitat%></h3>
    <h4><%=@pet.age%></h4>
    <p><%=@pet.description%></p>
    </div>
  </div>

    <%@pet.bookings.each do|booking| %>
      <%= simple_form_for [booking, @review] do |f| %>
        <%= f.input :description, placeholder: 'Commentaire' %>
        <%= f.submit class: 'btn btn-flat' %>
      <% end %>
    <% end %>

  <div class="mb-5">

    <div class="d-flex">
      <i class="fa-solid fa-rotate-left"></i>
      <%= button_to 'Back to the List', pets_path, class: "btn btn-ghost mb-2", method: 'get' %>
    </div>


  <%= simple_form_for [@pet, @booking] do |f| %>
  <div class="d-flex justify-content-between">
  <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" }, class: "d-none" } %>
  <%= f.input :end_date , as: :string, input_html: { data: { controller: "datepicker" }, class: "d-none"  } %>
</div>
  <%= f.submit class: "btn btn-ghost" %>
<% end %>
 <i class="fa-solid fa-plus"></i>
 <%= link_to 'Remove', pet_path(@pet), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } %>
  </div>
